---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { calculateReadingTime } from "../utils/readingTime";

const allPosts = await getCollection("blog");

const postsEn = allPosts
  .filter((p) => p.data.lang === "en")
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const postsZh = allPosts
  .filter((p) => p.data.lang === "zh")
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title="GuCarpenter | Home">
  <section class="mb-12">
    <h1
      class="text-3xl sm:text-4xl font-extrabold tracking-tight mb-6 text-slate-900 dark:text-slate-100"
    >
      <span class="lang-en-only">Understand the World by Creating</span>
      <span class="lang-zh-only">通过创造理解世界</span>
    </h1>
    <p
      class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed max-w-2xl"
    >
      <span class="lang-en-only"
        >A personal cabin documenting my journey through AI, system
        architecture, and other interesting things.</span
      >
      <span class="lang-zh-only"
        >记录个人在人工智能、系统架构和其他有趣领域的精神小屋。</span
      >
    </p>
  </section>

  <div class="space-y-12">
    <h2
      class="text-2xl font-bold border-b border-gray-100 dark:border-dark-border pb-4 text-slate-900 dark:text-slate-100"
    >
      <span class="lang-en-only">Latest Articles</span>
      <span class="lang-zh-only">最新文章</span>
    </h2>

    <!-- English Posts -->
    <div class="grid gap-12 lang-en-only">
      {
        postsEn.map((post) => (
          <article class="group relative flex flex-col space-y-4">
            <div class="flex items-center gap-3 text-sm text-slate-500 dark:text-slate-400">
              <FormattedDate date={post.data.pubDate} />
              <span>•</span>
              <a
                href={`/blog?topic=${post.id.includes("/") ? post.id.split("/")[0] : ""}`}
                class="text-sky-600 dark:text-sky-400 font-medium hover:underline z-10 relative"
              >
                {post.id.includes("/")
                  ? post.id
                      .split("/")[0]
                      .replace(/_/g, " ")
                      .replace(/\b\w/g, (l) => l.toUpperCase())
                  : "Article"}
              </a>
              <span>•</span>
              <span>{calculateReadingTime(post.body || "")} min read</span>
            </div>
            <h3 class="text-2xl font-bold group-hover:text-sky-600 dark:group-hover:text-sky-400 transition-colors text-slate-900 dark:text-slate-100">
              <a
                href={`/blog/${post.id}/`}
                class="after:absolute after:inset-0"
              >
                {post.data.title}
              </a>
            </h3>
            <p class="text-slate-600 dark:text-slate-300 line-clamp-3">
              {post.data.description}
            </p>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex gap-2 pt-2 z-10 relative">
                {post.data.tags.map((tag) => (
                  <a
                    href={`/blog?topic=${tag}`}
                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-sky-50 text-sky-700 dark:bg-sky-900/20 dark:text-sky-300 border border-sky-100 dark:border-sky-900/30 hover:bg-sky-100 dark:hover:bg-sky-900/40 transition-colors"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            )}
          </article>
        ))
      }
    </div>

    <!-- Chinese Posts -->
    <div class="grid gap-12 lang-zh-only">
      {
        postsZh.map((post) => (
          <article class="group relative flex flex-col space-y-4">
            <div class="flex items-center gap-3 text-sm text-slate-500 dark:text-slate-400">
              <FormattedDate date={post.data.pubDate} />
              <span>•</span>
              <a
                href={`/blog?topic=${post.id.includes("/") ? post.id.split("/")[0] : ""}`}
                class="text-sky-600 dark:text-sky-400 font-medium hover:underline z-10 relative"
              >
                {post.id.includes("/")
                  ? post.id
                      .split("/")[0]
                      .replace(/_/g, " ")
                      .replace(/\b\w/g, (l) => l.toUpperCase())
                  : "文章"}
              </a>
              <span>•</span>
              <span>{calculateReadingTime(post.body || "")} 分钟阅读</span>
            </div>
            <h3 class="text-2xl font-bold group-hover:text-sky-600 dark:group-hover:text-sky-400 transition-colors text-slate-900 dark:text-slate-100">
              <a
                href={`/blog/${post.id}/`}
                class="after:absolute after:inset-0"
              >
                {post.data.title}
              </a>
            </h3>
            <p class="text-slate-600 dark:text-slate-300 line-clamp-3">
              {post.data.description}
            </p>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex gap-2 pt-2 z-10 relative">
                {post.data.tags.map((tag) => (
                  <a
                    href={`/blog?topic=${tag}`}
                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-sky-50 text-sky-700 dark:bg-sky-900/20 dark:text-sky-300 border border-sky-100 dark:border-sky-900/30 hover:bg-sky-100 dark:hover:bg-sky-900/40 transition-colors"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            )}
          </article>
        ))
      }
    </div>

    <div class="pt-8">
      <a
        href="/blog"
        class="text-sky-600 dark:text-sky-400 font-medium hover:underline flex items-center gap-2"
      >
        <span class="lang-en-only">View all articles</span>
        <span class="lang-zh-only">查看所有文章</span>
        <i class="fas fa-arrow-right text-xs"></i>
      </a>
    </div>
  </div>
</Layout>
