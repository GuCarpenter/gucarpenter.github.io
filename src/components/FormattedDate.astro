---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="lang-en-only">
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
<time datetime={date.toISOString()} class="lang-zh-only">
	{
		date.toLocaleDateString('zh-cn', {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>